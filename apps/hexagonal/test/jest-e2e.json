{
  "moduleFileExtensions": ["js", "json", "ts"],
  "rootDir": ".",
  "moduleNameMapper": {
    "^@common/core(|/.*)$": "<rootDir>/../../../libs/core/src/$1",
    "^@common/modules(|/.*)$": "<rootDir>/../../../libs/modules/src/$1",
    "^@common/utils(|/.*)$": "<rootDir>/../../../libs/utils/src/$1"
  },
  "testEnvironment": "node",
  "testRegex": ".e2e-spec.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "testTimeout": 30000
}
